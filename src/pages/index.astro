<script>
  // Animated bar chart - updates every 2 seconds
  function animateVelocityChart() {
    const bars = document.querySelectorAll('.velocity-bar');

    function updateBars() {
      bars.forEach((bar) => {
        // Generate random height between 40% and 98%
        const newHeight = Math.floor(Math.random() * 58) + 40;
        (bar as HTMLElement).style.height = `${newHeight}%`;
      });
    }

    // Update bars every 2 seconds
    setInterval(updateBars, 2000);
  }

  // Initialize when DOM is ready
  document.addEventListener('DOMContentLoaded', animateVelocityChart);

  // Also handle Astro view transitions
  document.addEventListener('astro:page-load', animateVelocityChart);
</script>
