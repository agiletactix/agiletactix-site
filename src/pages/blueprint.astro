            <!-- 5 Prompts List -->
            <ul class="text-left text-sm space-y-2 mb-6">
              <li class="flex items-start gap-2">
                <svg class="w-4 h-4 text-primary-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                <span class="text-gray-700"><strong class="text-gray-900">The Story Improver Prompt</strong></span>
              </li>
