    background: white;
    border-radius: 50%;
    opacity: 0;
    animation: twinkle 4s infinite ease-in-out;
  }

  /* Position stars randomly across the modal */
  .star:nth-child(1) { top: 8%; left: 12%; animation-delay: 0s; }
