  form.formkit-form[data-uid="fb2e1ff944"] {
    max-width: 923px !important;
    width: 100% !important;
  }

  #playbook-modal .formkit-form[data-uid="4252f254d4"] {
    max-width: 100% !important;
    width: 100% !important;
