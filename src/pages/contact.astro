---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'Contact';
const pageDescription = 'Get in touch with AgileTactix. Whether you have questions about training, want to discuss custom solutions, or just want to connectâ€”we\'d love to hear from you.';
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-gray-50 via-white to-primary-50">
    <div class="section-container py-16 sm:py-20">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="heading-xl text-gray-900 mb-6">
          Get In Touch
        </h1>
        <p class="text-xl text-gray-600">
          Questions about training? Want to discuss custom solutions? Just want to connect? Let's talk.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Form Section -->
  <section class="bg-white">
    <div class="section-container py-16 sm:py-20">
      <div class="max-w-2xl mx-auto">
        <form class="space-y-6">
          <!-- Name Field -->
          <div>
            <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">
              Name *
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200"
              placeholder="Your name"
            />
          </div>

          <!-- Email Field -->
          <div>
            <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
              Email *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200"
              placeholder="your.email@example.com"
            />
          </div>

          <!-- Subject Field -->
          <div>
            <label for="subject" class="block text-sm font-semibold text-gray-700 mb-2">
              Subject
            </label>
            <input
              type="text"
              id="subject"
              name="subject"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200"
              placeholder="What's this about?"
            />
          </div>

          <!-- Message Field -->
          <div>
            <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">
              Message *
            </label>
            <textarea
              id="message"
              name="message"
              required
              rows="6"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-200 resize-none"
              placeholder="Tell me what's on your mind..."
            ></textarea>
          </div>

          <!-- Submit Button -->
          <div>
            <button
              type="submit"
              class="w-full btn-primary text-lg py-4"
            >
              Send Message
            </button>
          </div>

          <!-- Response Time Note -->
          <p class="text-sm text-gray-500 text-center">
            Usually respond within 24 hours
          </p>
        </form>

        <!-- Note about form functionality -->
        <div class="mt-8 bg-amber-50 border border-amber-200 rounded-lg p-6">
          <p class="text-sm text-amber-800">
            <strong>Note:</strong> This form is currently a placeholder. To make it functional, integrate with a service like Formspree, Netlify Forms, or your preferred form handling solution.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Alternative Contact Methods -->
  <section class="bg-gray-50">
    <div class="section-container py-16">
      <div class="max-w-3xl mx-auto">
        <h2 class="heading-md text-gray-900 text-center mb-12">
          Other Ways to Connect
        </h2>

        <div class="grid sm:grid-cols-3 gap-8">
          <!-- Email -->
          <div class="text-center">
            <div class="w-14 h-14 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Email</h3>
            <a href="mailto:hello@agiletactix.com" class="text-primary-600 hover:text-primary-700">
              hello@agiletactix.com
            </a>
            <p class="text-xs text-gray-500 mt-1">(Placeholder email)</p>
          </div>

          <!-- LinkedIn -->
          <div class="text-center">
            <div class="w-14 h-14 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-primary-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">LinkedIn</h3>
            <span class="text-primary-600">
              Connect on LinkedIn
            </span>
            <p class="text-xs text-gray-500 mt-1">(Placeholder link)</p>
          </div>

          <!-- Twitter/X -->
          <div class="text-center">
            <div class="w-14 h-14 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-7 h-7 text-primary-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z" />
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2">Twitter/X</h3>
            <span class="text-primary-600">
              Follow on X
            </span>
            <p class="text-xs text-gray-500 mt-1">(Placeholder link)</p>
          </div>
        </div>

        <!-- Office Hours Note -->
        <div class="mt-12 bg-white rounded-xl p-8 shadow-soft text-center">
          <h3 class="text-xl font-semibold text-gray-900 mb-3">
            Office Hours
          </h3>
          <p class="text-gray-600">
            Available Monday - Friday, 9am - 5pm EST
          </p>
          <p class="text-sm text-gray-500 mt-2">
            Usually respond to all inquiries within 24 hours
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-primary-600 text-white">
    <div class="section-container py-16 sm:py-20">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="heading-lg mb-4">
          Or Skip the Form and Get the Blueprint Instead
        </h2>
        <p class="text-xl mb-8 text-primary-100">
          Download the free Agile-AI Blueprint and start your transformation today
        </p>
        <a href="/blueprint" class="inline-block bg-white text-primary-600 px-10 py-4 rounded-lg font-bold text-lg shadow-strong hover:shadow-xl hover:bg-gray-50 transform hover:-translate-y-1 transition-all duration-200">
          Get the Blueprint
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
